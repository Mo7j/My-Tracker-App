platform :ios, '13.0'

# Point to the Flutter SDK installed on the CI runner (or locally)
flutter_root = ENV['FLUTTER_ROOT']
raise "FLUTTER_ROOT not set" if flutter_root.nil? || flutter_root.empty?

require File.expand_path('packages/flutter_tools/bin/podhelper', flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # static frameworks work best with Flutter plugins
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # Flutter post-install hook (newer templates)
  flutter_post_install(installer) if defined?(flutter_post_install)

  # Apply Flutter iOS build settings + sanitize bad flags safely
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Some targets are PBXAggregateTarget and do not have source_build_phase
    next unless target.respond_to?(:source_build_phase)

    target.source_build_phase.files.each do |file|
      flags = file.settings && file.settings['COMPILER_FLAGS']
      next unless flags.is_a?(String)

      new_flags = flags.gsub(' -GCC_WARN_INHIBIT_ALL_WARNINGS', '')
      file.settings['COMPILER_FLAGS'] = new_flags if new_flags != flags
    end
  end
end
